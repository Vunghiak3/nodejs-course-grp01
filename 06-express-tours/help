#Download postman
https://www.postman.com/


#Working directory: 06-express-tours

#init project
npm init

#install nodemon
npm install nodemon --save-dev

#install express version 4
npm install express@4

#run application with nodemon
npm run start:dev

#install morgan
#3rd-party middleware #https://github.com/expressjs/morgan
npm install morgan

#reading environment variables with dotenv
npm install dotenv


#tedious is the implementation of the TDS protocol which the driver uses to communicate to SQL Server
npm install tedious
#using mssql as wrapper of tedious
#mssql has built-in SQL injection protection. Always use parameters or tagged template literals to pass sanitized values to your queries.
npm install mssql


#Authentication
#https://github.com/dcodeIO/bcrypt.js
npm install bcryptjs

#https://github.com/auth0/node-jsonwebtoken
#https://jwt.io/
npm install jsonwebtoken


#URL with query param:
http://localhost:9001/api/v1/tours?duration[gte]=5&duration[lt]=8&price[lt]=500&price[gt]=100
gt: greater than
gte: greater than or equal
lt: less than
lte: less than or equal
eq: equal



















